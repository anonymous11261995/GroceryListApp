<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">

    <ImageView
        android:id="@+id/recipe_detail_image"
        android:layout_width="@dimen/recipe_detail_image_size"
        android:layout_height="@dimen/recipe_detail_image_size"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_recipe" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@+id/recipe_detail_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recipe_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/recipe_detail_description"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recipe_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:scrollHorizontally="true"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#ff666666"
            app:layout_constraintTop_toBottomOf="@id/recipe_detail_name" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>